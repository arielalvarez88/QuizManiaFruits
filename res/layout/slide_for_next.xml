<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <RelativeLayout android:layout_centerInParent="true"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/doubleArrow"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/double_arrow"
            android:scaleType="centerInside" 
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/slideMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doubleArrow"
            android:text="@string/slideForNext"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>